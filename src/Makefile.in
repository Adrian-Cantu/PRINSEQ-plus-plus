# @configure_input@
# Package-specific substitution variables
package = @PACKAGE_NAME@
version = @PACKAGE_VERSION@
tarname = @PACKAGE_TARNAME@
distdir = $(tarname)-$(version)
# Prefix-specific substitution variables
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
# VPATH-related substitution variables
srcdir = @srcdir@
VPATH = @srcdir@

CXXFLAGS = -std=c++11


all: pprinseqc


pprinseqc: main.o reads.o
	$(CXX) $(CXXFLAGS) -o pprinseqc main.o reads.o

main.o: main.cpp reads.h
reads.o: reads.cpp reads.h 

test: all
	./pprinseqc -fastq test_F.fastq -fastq2 test_R.fastq -out_format 1 && \
	./pprinseqc -fastq test_F.fastq -fastq2 test_R.fastq && echo "*** ALL TEST PASSED***"

install:
	install -d $(DESTDIR)$(bindir)/bin
	install -m 0775 pprinseqc $(DESTDIR)$(bindir)/bin

uninstall:
	-rm $(DESTDIR)$(bindir)/bin/pprinseqc

clean:
	-rm -f pprinseqc
	-rm -f Test*fastq
	-rm -f Test*fasta
	-rm -f *.o

Makefile: Makefile.in ../config.status
	cd .. && ./config.status src/$@

../config.status: ../configure
	cd .. && ./config.status --recheck



.PHONY: all clean check install uninstall
